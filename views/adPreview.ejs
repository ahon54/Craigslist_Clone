<main>
  <div class="post-ad-title">
    <h4>Preview</h4>
  </div>

  <form class="preview-ad-form" action="/adPreview" method="POST">
    <div class="preview-ad-main-container">
      <div class="preview-container">
        <div class="preview-section1">
          <div class="product-image">
            <h1 id="preview_title"></h1>
            <h4 class="location-title">
              <img src="img/marker_1.png" class="" />
            </h4>
            <div class="row">
              <div class="column">
                <img
                  id="preview_img"
                  alt="Snow"
                  style="width: 100%;"
                  class="column-add-preview"
                />
                <p class="price">Price: <span id="price"></span></p>
              </div>
            </div>
          </div>
          <div class="product-details">
            <h1>Description</h1>
            <p id="preview-description"></p>
          </div>
        </div>

        <div class="preview-section2">
          <div class="product-description">
            <button class="favourite_button" type="submit">
              <div class="wrap">
                <img src="img/heart.png" height="20px" class="favourite_icon" />
                <div class="text">Favourite</div>
              </div>
            </button>
            <h1>Details</h1>
            <p>Condition:<span id="preview-condition"></span></p>
            <p>Method of Payment:<span id="preview-payment"></span></p>
            <p>
              Method of Communication:<span id="preview-communication"></span>s
            </p>
            <p>Negotiable:<span id="preview-negotiable"></span></p>
            <!-- find a way to implement seller_id -->
          </div>
        </div>
      </div>
      <div class="preview-container-buttons">
        <button
          type="button"
          class="button-content-container"
          onclick="history.back()"
        >
          Back
        </button>
        <button type="submit" class="button-content-container">Post Ad</button>
      </div>
    </div>
  </form>
</main>

