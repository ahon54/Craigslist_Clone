<main>
    <form action="/adPreview" method="GET">
        <div class="post-ad-title">
            <h4> Details </h4>
        </div>
        <div class="post-ad-container">
            <div class="form-group">
                <label for="formGroupExampleInput"></label>
                <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Title" name="title">
            </div>
            <div class="form-group">
                <label for="formGroupExampleInput"></label>
                <input type="text" class="form-control" id="formGroupExampleInput" placeholder="$ Price" name="price">
            </div>
            <div class="form-group">
                <label for="exampleFormControlTextarea1"></label>
                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="Description" name="description"></textarea>
            </div>
            <div class="upload-container">
                <div class="custom-file">
                    <input type="file" class="custom-file-input" id="customFile" name="picture">
                    <label class="custom-file-label" for="customFile">Upload Image</label>
                </div>
            </div>

            <input type="hidden" class="form-control" id="formGroupExampleInput" value="<%= location_id %>" name="location_id">
            <input type="hidden" class="form-control" id="formGroupExampleInput" value="<%= ad_id %>" name="ad_id">
            <input type="hidden" class="form-control" id="formGroupExampleInput" value="<%= item_category_id %>" name="item_category_id">
            <input type="hidden" class="form-control" id="formGroupExampleInput" value="<%= condition %>" name="condition">
            <input type="hidden" class="form-control" id="formGroupExampleInput" value="<%= method_of_payment %>" name="method_of_payment">
            <input type="hidden" class="form-control" id="formGroupExampleInput" value="<%= method_of_communication %>" name="method_of_communication">
            <input type="hidden" class="form-control" id="formGroupExampleInput" value="<%= negotiable %>" name="negotiable">


            <div class="button-container">
                <button type="button" class="button-content" onclick="history.back()">Back</button>
                <button type="submit" class="button-content">Preview</button>
            </div>
        </div>
    </form>
</main>

