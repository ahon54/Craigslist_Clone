<main>
  <div class="main-selection-page-container">
    <div class="selection-page-container">
      <% posts.forEach(post => { %>
      <div class="user-product-selection-image">
        <div class="user-row">
          <div class="user-column">
            <a href="/product/<%= post.id %> ">
              <img
                src="<%= post.picture %> "
                style="width: 100%;"
                class="column-add-preview"
              />
            </a>
            <div class="user-detail-container">
              <p class="user-user"><%= post.title %></p>
              <p class="user-price">Price: <%= post.price %></p>
              <p class="user-user">Seller: <%= current_user.name %></p>
            </div>
          </div>
        </div>
      </div>
      <% }) %>
    </div>
  </div>

  <button type="button" class="see-more-text">View more</button>
</main>

